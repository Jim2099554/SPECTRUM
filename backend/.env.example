# Ejemplo de archivo .env para el backend SENTINELA

# Cadena de conexión a la base de datos (SQLite por defecto)
DATABASE_URL=sqlite:///backend/transcripts.db

# Clave secreta para JWT (cámbiala en producción)
JWT_SECRET=super-secret-key

# Clave de cifrado obligatoria para datos sensibles
ENCRYPTION_KEY=pon_aqui_una_clave_segura

# Carpeta donde se guardan los audios subidos
AUDIO_UPLOAD_DIR=./secure_audio

# Credenciales AMI para integración con Asterisk PBX
AMI_HOST=
AMI_PORT=5038
AMI_USER=
AMI_PASSWORD=

# Agrega aquí otras variables necesarias, por ejemplo SMTP, Google Cloud, etc.
